{
  "compilerOptions": {
    // Compilation output
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,

    // Module settings
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Additional settings
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,

    // Type definitions
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
